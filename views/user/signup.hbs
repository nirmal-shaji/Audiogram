<script>

  $("#signupForm").validate( { 
rules: { 
  first_name: { 
        required: true, minlength: 1 
},
  last_name: { 
        required: true, minlength: 1 
},
 phone_number: {
         required: false,
   minlength: 10 
},
  email: {
     required: true, email: true, minlength: 5 
},
 
  password: {
     required: false, minlength: 1, maxlength: 10 
},
  confirm_password: {
     required: false, 
     equalTo: "#password" 
} },
      messages: {
  password: {
     required: "Password is required", minlength: "Password should ontain atleast 5 characters" 
},
      confirm_password: { equalTo: "Enter the same password " }, } })

</script>
